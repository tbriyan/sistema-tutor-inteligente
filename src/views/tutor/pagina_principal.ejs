        .p-seleccionar{
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .seleccionar input[type="radio"] + label{
            font-weight: bold;
            line-height: 3em;
            color: #a09d9d;
            cursor: pointer;
            border-radius: 20px;
        }
        .seleccionar input[type="radio"] + label:before{
            content: "";
            width: 26px;
            height: 26px;
            float: left;
            margin: 0.6em 0.6em 0 0;
            border: 2px solid #ccc;
            background: #fff;
            border-radius: 100%;
        }
        .seleccionar input[type="radio"]:checked + label:before{
            border-color: #0fbf12;
        }
        .seleccionar input[type="radio"]:checked + label{
            background: #c1eec2;
        }
        .seleccionar input[type="radio"]:checked + label:after {
	        content: "";
	        width: 0;
	        height: 0;
	        border: 7px solid #0fbf12;
	        float: left;
	        margin-left: -1.85em;
	        margin-top: 1em;
	        border-radius: 100%;
            color: black;
        }
        .seleccionar label{
            font-weight: 600;
	        color: #777777;
	        margin-bottom: 11px;
	        width: 100%;
	        float: left;
	        cursor: pointer;
	        padding: 0 0.6em;
	        box-sizing: border-box;
	        background: #e6e6e6;
	        transition: all 0.5s ease 0s;
        }
    </style>
